@using BELibrary.Entity
@using BELibrary.Utils
@model List<AttachmentAssign>

@{
    ViewBag.Title = "Tệp đính kèm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 250px">
    <h2 class="text-center"> Thông tin tệp đính kèm</h2>
    <div class="panel" style="margin-bottom:0!important">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">STT</th>
                            <th class="text-center">Tên </th>
                            <th class="text-center">Loại </th>
                            <th class="text-center">Tải xuống </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-center">Không có tệp nào </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model.Select((value, index) => new { index = (index + 1), value }))
                            {
                                <tr id="row_@item.value.Attachment.Id">
                                    <td class="text-center"><a class="btn-link" href="#">@item.index</a></td>
                                    <td class="text-center">@item.value.Attachment.Name</td>
                                    <td class="text-center">@item.value.Attachment.Type</td>
                                    <td class="text-center">
                                        <a class="btn btn-info" href="@item.value.Attachment.Url" target="_blank" style="font-size: 9px">
                                            <i class="fa fa-download icon-sm"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="text-center pt-3" style="padding-bottom: 20px">
            <button class="btn btn-primary" onclick="window.history.back()"> Quay lại</button>
        </div>
    </div>
</div>

<!-- end main-content -->
@section Scripts {
}