@using BELibrary.Entity
@{
    var doctors = (List<Doctor>)ViewBag.Doctors ?? new List<Doctor>();
    var latestPosts = (List<Article>)ViewBag.LatestPosts ?? new List<Article>();

}

<section class="section section-search">
    <div class="container-fluid">
        <div class="banner-wrapper">
            <div class="banner-header text-center">
                <h1>Tìm kiếm bác sĩ, đặt lịch khám.</h1>
                <p>Hãy đến với Healthy System - Nơi xem sức khỏe của bạn là trên hết.</p>
            </div>
            <div class="search-box">
                <form action="/doctor/search" method="post">
                    <div class="form-group search-info">
                        <input type="text" class="form-control" placeholder="Tìm kiếm bác sĩ, thuốc, bệnh, phòng khám gần bạn..." name="query">
                        <span class="form-text">Ví dụ: Sâu răng.</span>
                    </div>
                    <button type="submit" class="btn btn-primary search-btn mt-0"><i class="fas fa-search"></i> <span>Tìm kiếm</span></button>
                </form>
            </div>
        </div>
    </div>
</section>

